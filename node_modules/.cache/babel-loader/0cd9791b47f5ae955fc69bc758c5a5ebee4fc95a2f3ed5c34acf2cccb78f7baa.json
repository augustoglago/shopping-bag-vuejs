{"ast":null,"code":"import { mapState } from 'vuex';\nexport default {\n  name: 'ShoppingBasket',\n  computed: mapState(['productsInBag']),\n  methods: {\n    orderTotal() {\n      var total = 0;\n      this.productsInBag.forEach(item => {\n        total += item.price * item.quantity;\n      });\n      return total.toFixed(2);\n    }\n  }\n};","map":{"version":3,"names":["mapState","name","computed","methods","orderTotal","total","productsInBag","forEach","item","price","quantity","toFixed"],"sources":["C:\\Users\\augus\\Desktop\\Project 5 - Shopping Bag - Initial\\src\\views\\ShoppingBasket.vue"],"sourcesContent":["<template>\n<div class=\"basket\">\n    <div class=\"items\">\n\n        <template v-if=\"productsInBag.length\">\n            <div v-for=\"(product, index) in productsInBag\" :key=\"index\" class=\"item\">\n                <div class=\"remove\" @click=\"this.$store.dispatch('removeFromBag', product.id)\">Remove Item</div>\n                <div class=\"photo\"><img :src=\"product.image\" alt=\"\"></div>\n                <div class=\"description\">{{ product.title }}</div>\n                <div class=\"price\">\n                    <span class=\"quantity-area\">\n                        <button :disabled=\"product.quantity <= 1\" @click=\"product.quantity--\">-</button>\n                        <span class=\"quantity\">{{ product.quantity }}</span>\n                        <button @click=\"product.quantity++\">+</button>\n                    </span>\n                    <span class=\"amount\">US$ {{ (product.price * product.quantity).toFixed(2) }}</span>\n                </div>\n            </div>\n            <div class=\"grand-total\"> Total do pedido: US$ {{ orderTotal() }}</div>\n        </template>\n\n        <template v-else>\n            <h4>No items in bag</h4>\n        </template>\n\n    </div>\n</div>\n</template>\n\n<script>\nimport {\n    mapState\n} from 'vuex'\n\nexport default {\n    name: 'ShoppingBasket',\n\n    computed: mapState([\n        'productsInBag'\n    ]),\n\n    methods: {\n      orderTotal() {\n        var total = 0\n        this.productsInBag.forEach(item => {\n          total += item.price * item.quantity\n        })\n        return total.toFixed(2)\n      }\n    },\n\n}\n</script>\n\n<style lang=\"scss\">\n.basket {\n    padding: 60px 0;\n\n    .items {\n        max-width: 800px;\n        margin: auto;\n\n        .item {\n            display: flex;\n            justify-content: space-between;\n            padding: 40px 0;\n            border-bottom: 1px solid lightgrey;\n            position: relative;\n\n            .remove {\n                position: absolute;\n                top: 8px;\n                right: 0;\n                font-size: 11px;\n                text-decoration: underline;\n                cursor: pointer;\n            }\n\n            .quantity-area {\n                margin: 8px auto;\n                height: 14px;\n\n                button {\n                    width: 16px;\n                    height: 16px;\n                    display: inline-flex;\n                    justify-content: center;\n                    align-items: center;\n                    cursor: pointer;\n                }\n\n                .quantity {\n\n                    margin: 0 4px;\n                }\n            }\n\n            .photo {\n                img {\n                    max-width: 80px;\n                }\n            }\n\n            .description {\n                padding-left: 30px;\n                box-sizing: border-box;\n                max-width: 50%;\n\n            }\n\n            .price {\n                .amount {\n                    font-size: 16px;\n                    margin-left: 8px;\n                    vertical-align: middle;\n\n                }\n            }\n        }\n\n        .grand-total {\n            font-size: 24px;\n            font-weight: bold;\n            text-align: right;\n            margin-top: 8px;\n        }\n\n    }\n\n}\n</style>\n"],"mappings":"AA8BA,SACIA,QAAO,QACJ,MAAK;AAEZ,eAAe;EACXC,IAAI,EAAE,gBAAgB;EAEtBC,QAAQ,EAAEF,QAAQ,CAAC,CACf,eAAc,CACjB,CAAC;EAEFG,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAIC,KAAI,GAAI;MACZ,IAAI,CAACC,aAAa,CAACC,OAAO,CAACC,IAAG,IAAK;QACjCH,KAAI,IAAKG,IAAI,CAACC,KAAI,GAAID,IAAI,CAACE,QAAO;MACpC,CAAC;MACD,OAAOL,KAAK,CAACM,OAAO,CAAC,CAAC;IACxB;EACF;AAEJ"},"metadata":{},"sourceType":"module","externalDependencies":[]}